<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/carRegno"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="12sp"
            android:background="@drawable/rounded_bg"
            android:ems="20"
            android:hint="@string/car_reg_number_hint"
            android:padding="10dp"
            android:textColor="@color/darkblue"
            android:textColorHint="@color/grey"
            android:inputType="text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/carTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="12sp"
            android:background="@drawable/rounded_bg"
            android:entries="@array/vehicle_types"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/driverName"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="12sp"
            android:background="@drawable/rounded_bg"
            android:ems="20"
            android:hint="@string/driver_name_hint"
            android:padding="10dp"
            android:textColor="@color/darkblue"
            android:textColorHint="@color/grey"
            android:inputType="text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/driverAge"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="12sp"
            android:background="@drawable/rounded_bg"
            android:ems="20"
            android:hint="@string/driver_age_hint"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/darkblue"
            android:textColorHint="@color/grey"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/driverGenderRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/darkblue"
                android:text="@string/driver_gender_label"
                android:textSize="17sp"/>

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/male_label"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/female_label"
                android:textSize="15sp"/>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/driverLicenseRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/driver_license_label"
                android:textColor="@color/darkblue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/yesLicenseRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/yes_label"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/noLicenseRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/no_label"
                android:textSize="15sp"/>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/seatBeltRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/darkblue"
                android:text="@string/seat_belt_label"
                android:textSize="17sp"/>

            <RadioButton
                android:id="@+id/yesSeatBeltRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/yes_label"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/noSeatBeltRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/no_label"
                android:textSize="15sp"/>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/helmetRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/darkblue"
                android:text="@string/helmet_label"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/yesHelmetRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/yes_label"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/noHelmetRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/no_label"
                android:textSize="15sp"/>

        </RadioGroup>

        <Button
            android:id="@+id/cameraButton"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12sp"
            android:background="@drawable/cameralogo" />
    </LinearLayout>
</LinearLayout>
