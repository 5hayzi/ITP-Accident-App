<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_marginTop="5dp"
      android:background="@color/grey"
      />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/carRegno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_bg"
            android:ems="20"
            android:hint="Enter Car's Number"
            android:padding="10dp"
            android:textColor="@color/darkblue"
            android:textColorHint="@color/grey"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/carTypeSpinner"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_bg"
            android:layout_height="40dp"
            android:entries="@array/vehicle_types"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/driverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_bg"
            android:ems="20"
            android:hint="Driver's Name"
            android:padding="10dp"
            android:textColor="@color/darkblue"
            android:textColorHint="@color/grey"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/driverAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_bg"
            android:ems="20"
            android:hint="Driver's Age"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/darkblue"
            android:textColorHint="@color/grey"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/driverGenderRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/darkblue"
                android:text="Driver's Gender"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Female" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/driverLicenseRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Driver's License"
                android:textColor="@color/darkblue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/yesLicenseRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/noLicenseRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="No" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/seatBeltRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/darkblue"
                android:text="Seat Belt"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/yesSeatBeltRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/noSeatBeltRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="No" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/helmetRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/darkblue"
                android:text="Helmet"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/yesHelmetRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/noHelmetRadioButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="No" />

        </RadioGroup>
    </LinearLayout>
</LinearLayout>
