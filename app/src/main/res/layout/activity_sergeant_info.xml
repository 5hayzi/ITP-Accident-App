<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/itpLogo"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/itplogo2"
            android:contentDescription="@string/itp_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/Top_name"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/AccidentLogo"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/officerlogo"
            android:contentDescription="@string/sergent_logo"/>


    </LinearLayout>
    <!--Page Text Box-->
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:gravity="center"
        android:background="@drawable/borderclass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sergeant_info"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
    <!--    scroll view-->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0"
        tools:context=".Vehicle"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/scrollViewLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--Vehicle Registration No.-->

            <EditText
                android:id="@+id/division"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_bg"
                android:ems="20"
                android:hint="@string/enter_division"
                android:padding="10dp"
                android:textColor="@color/darkblue"
                android:textColorHint="@color/grey"
                android:inputType="text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_bg"
                android:hint="@string/select_date"
                android:padding="12dp"
                android:textColor="@color/darkblue"
                android:textColorHint="@color/grey"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_bg"
                android:hint="@string/select_time"
                android:padding="12dp"
                android:textColor="@color/darkblue"
                android:textColorHint="@color/grey"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sergeantName"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_bg"
                android:ems="20"
                android:hint="@string/enter_sergeant_name"
                android:padding="10dp"
                android:textColor="@color/darkblue"
                android:textColorHint="@color/grey"
                android:inputType="text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sergeantRank"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_bg"
                android:ems="20"
                android:hint="@string/enter_sergeant_rank"
                android:padding="10dp"
                android:textColor="@color/darkblue"
                android:inputType="text"
                android:textSize="18sp"
                android:textColorHint="@color/grey"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sergeantId"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_bg"
                android:ems="20"
                android:hint="@string/enter_sergeant_id"
                android:padding="10dp"
                android:textColor="@color/darkblue"
                android:inputType="text"
                android:textSize="18sp"
                android:textColorHint="@color/grey"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12sp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnprev"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/back_button_bg"
                    android:gravity="center"
                    android:text="@string/previous"
                    android:textAlignment="center"
                    android:textColor="#C30808"
                    android:textSize="18sp">

                </TextView>


                <TextView
                    android:id="@+id/btnnxt"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/next_button_bg"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textAlignment="center"
                    android:textColor="#0E8F0A"
                    android:textSize="18sp">

                </TextView>
            </LinearLayout>
            <Button
                android:id="@+id/languageButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/language"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
